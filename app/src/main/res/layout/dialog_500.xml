<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:gravity="center"
    tools:context=".dialog.Dialog500">

    <TextView
        android:id="@+id/tv_title"
        style="@style/title_text"
        android:text="출력 완료" />

    <LinearLayout style="@style/md_body">

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:scale_base_width="100"
            app:scale_base_height="122" >

            <ImageView
                android:id="@+id/iv_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:scale_width="50"
                app:scale_height="45"
                app:scale_top="10"
                app:scale_left="25"
                android:src="@drawable/label_print" />

            <TextView
                android:id="@+id/tv_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:scale_width="100"
                app:scale_height="20"
                app:scale_left="0"
                app:scale_top="65"
                android:gravity="center"
                app:scale_textsize="4.5"
                android:text="@string/msg_05"
                android:textColor="#202020" />

            <TextView
                android:id="@+id/tv_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:scale_width="100"
                app:scale_height="20"
                app:scale_top="90"
                app:scale_left="1"
                android:gravity="center"
                app:scale_textsize="3"
                android:text="10초 후 자동 종료됩니다."
                android:textColor="@color/red" />

        </com.ssomai.android.scalablelayout.ScalableLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        style="@style/cancel_order_btn"
        android:background="@drawable/dialog_bottom_green_btn"
        android:text="확인"/>
</LinearLayout>