<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="md_body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">8</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="md_bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="title_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/dialog_title_bg</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="cancel_order_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/dialog_bottom_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:text">결제취소</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="gif_info_md_scalable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="scale_base_height">122</item>
        <item name="scale_base_width">100</item>
    </style>

    <style name="gif_info_md_white_cir">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/md_od_fail_hourgrass_circle</item>
        <item name="scale_height">25</item>
        <item name="scale_left">37.5</item>
        <item name="scale_top">15</item>
        <item name="scale_width">25</item>
    </style>

    <style name="gif_info_md_gif_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="scale_height">25</item>
        <item name="scale_left">37.5</item>
        <item name="scale_top">15</item>
        <item name="scale_width">25</item>
    </style>
    
    <style name="gif_info_md_body_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="scale_height">20</item>
        <item name="scale_left">0</item>
        <item name="scale_textsize">5</item>
        <item name="scale_top">50</item>
        <item name="scale_width">100</item>
    </style>

    <style name="gif_info_md_sm_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#656565</item>
        <item name="android:textStyle">bold</item>
        <item name="scale_height">20</item>
        <item name="scale_left">0</item>
        <item name="scale_textsize">3.5</item>
        <item name="scale_top">70</item>
        <item name="scale_width">100</item>
    </style>

    <style name="gif_info_md_red_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/red</item>
        <item name="scale_height">20</item>
        <item name="scale_textsize">3</item>
        <item name="scale_top">90</item>
        <item name="scale_width">100</item>
    </style>
</resources>
